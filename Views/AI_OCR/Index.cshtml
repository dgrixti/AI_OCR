@{
    ViewData["Title"] = "AI Projects";
}

    <div class="text-center">
        <h1 class="display-4">AI Optical Character Recognition</h1>

        <p>Draw a handwritten character number 0-9 and press CHECK.</p>

        <div class="main_container">
            <input type="hidden" id="charValue" />
            <center>
                <table width="380px">
                    <tr>
                        <td>
                            <div style="text-align:center; width:100%">Draw here:</div>
                            <canvas id="drawCanvas" width="100" height="100"></canvas>
                        </td>
                        <td>
                            <div style="text-align:center; width:100%">Preview (32x32):</div>
                            <canvas id="drawCanvasThumb" width="32" height="32"></canvas>
                        </td>

                        <td>
                            <input type="text" id="charValueOutput" readonly="readonly" value="" style="width:95px; height:75px; font-size:51px" />
                            <br />
                            <input type="button" onclick="submitCharacter(); return false;" value="Guess Char" />
                        </td>
                    </tr>
                </table>
                <p>&nbsp;</p>
                <input type="button" onclick="reset(); return false;" value="Reset" />
            </center>
        </div>

        <script src="~/js/ai.js" asp-append-version="true"></script>
        <script src="~/js/canvas.js" asp-append-version="true"></script>

        <script>
            function reset() {
                window.location.reload();
            }

            function submitCharacter() {
                $.ajax({
                    type: "POST",
                    traditional: true,
                    dataType: "json",
                    url: "/AI_OCR/PredictCharacter",
                    data: { data: document.getElementById("charValue").value },
                    cache: false,
                    complete: function (data) {
                        // console.log(data);
                        if (data.responseText.length > 0) {
                            console.log("got response answer");
                            console.log(data.responseText);
                            document.getElementById("charValueOutput").value = data.responseText; ///.replace(/"/, "").replace(/"/, "");
                        }
                        else {
                            // 
                        }
                    }
                });
            }
        </script>
    </div>
